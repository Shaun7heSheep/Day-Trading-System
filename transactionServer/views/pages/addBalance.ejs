<!DOCTYPE html>
<html>

<head>
    <title>
        <%= userID %>
    </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/daytrading/css/login.css" />
</head>

<body>
    <%- include("../partials/navBar") %>
    <div class="row align-items-center main-container">
        <div class="mx-auto col-3 offset-6">
          <form id="amountForm">
            <div class="form-group">
              <label for="amount">Enter amount to be added:</label>
              <input type="number" class="form-control" id="amount" name="amount" placeholder="$" step="0.01" required />
            </div>
            <button id="addButton" type="submit" class="btn btn-primary btn-sm">Add</button>
          </form>
        </div>
      </div>
    <script src="/daytrading/js/addBalance.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>

</html>